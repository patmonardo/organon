{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@schema": [
        "src/schema/index.ts"
      ],
      "@schema/*": [
        "src/schema/*"
      ],
      "@repository": [
        "src/repository/index.ts"
      ],
      "@repository/*": [
        "src/repository/*"
      ],
      "@relative": [
        "src/relative/index.ts"
      ],
      "@relative/*": [
        "src/relative/*"
      ],
      "@absolute": [
        "src/absolute/index.ts"
      ],
      "@absolute/*": [
        "src/absolute/*"
      ],
      "@organon/reality": [
        "../reality/dist"
      ],
      "@organon/reality/*": [
        "../reality/dist/*"
      ],
      "@organon/core": [
        "../core/dist"
      ],
      "@organon/core/*": [
        "../core/dist/*"
      ],
      "@organon/logic": [
        "../logic/dist"
      ],
      "@organon/logic/*": [
        "../logic/dist/*"
      ],
      "@organon/model": [
        "../model/dist"
      ],
      "@organon/model/*": [
        "../model/dist/*"
      ],
      "@organon/task": [
        "../task/dist"
      ],
      "@organon/task/*": [
        "../task/dist/*"
      ]
    }
  },
  "include": [
    "src/index.ts",
    "src/core.ts"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
