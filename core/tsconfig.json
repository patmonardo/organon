{
  "compilerOptions": {
    "composite": true,
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022"
    ],
    "rootDir": "src",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "paths": {
      "@organon/task": [
        "../task/dist"
      ]
    }
  },
  "include": [
    "src/index.ts",
    "src/core.ts",
    // "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
