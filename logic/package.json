{
  "name": "logic",
  "private": true,
  "version": "0.1.0",
  "description": "Organon Logic Processor",
  "scripts": {
    "build": "tsc",
    "b": "tsc",
    "clean": "rm -rf dist node_modules",
    "dev": "tsc --watch",
    "d": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --reporter=dot",
    "t": "vitest run",
    "demo": "vitest run test/demo/form-processing.demo.test.ts -- --run --reporter=dot --watch=false",
    "lint": "eslint . --cache",
    "format": "prettier --write \"**/*.{ts,js,md,json,yml,yaml}\" --ignore-path .gitignore",
    "doc:api": "typedoc --tsconfig ./tsconfig.json --entryPoints \"./src/schema/*.ts\" \"./src/form/**/*.ts\" --exclude \"**/*.test.ts\" --readme ./README.md --out ./doc/api"
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.8",
    "tsx": "^4.20.4",
    "typedoc": "^0.26.0",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=18.18",
    "pnpm": ">=9"
  }
}
