{
  "name": "@organon/logic",
  "private": false,
  "version": "0.1.0",
  "license": "GPL-3.0-only",
  "description": "Organon Logic Processor",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts ",
  "scripts": {
    "prebuild": "pnpm codegen:dialectic",
    "build": "tsc && tsc-alias",
    "b": "tsc && tsc-alias",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo",
    "dev": "tsc --watch",
    "d": "tsc --watch",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --reporter=dot",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:seeded": "vitest run --config vitest.integration.config.ts test/integration/seeded-data.test.ts",
    "t": "vitest run --passWithNoTests",
    "lint": "eslint . --cache",
    "format": "prettier --write \"**/*.{ts,js,md,json,yml,yaml}\" --ignore-path .gitignore",
    "doc:api": "typedoc --options typedoc.json",
    "codegen:dialectic": "tsx src/tools/codegen-dialectic-registry.ts",
    "codegen:cit:cypher-ir": "tsx src/tools/generate-essence-cit-cypher-ir.ts",
    "codegen:being:ir": "tsx src/tools/generate-being-ir.ts",
    "codegen:being-for-self:ir": "tsx src/tools/generate-being-for-self-ir.ts",
    "codegen:existence:ir": "tsx src/tools/generate-existence-ir.ts",
    "codegen:quantity:ir": "tsx src/tools/generate-quantity-ir.ts",
    "codegen:quantum:ir": "tsx src/tools/generate-quantum-ir.ts",
    "codegen:ratio:ir": "tsx src/tools/generate-ratio-ir.ts",
    "codegen:magnitude:ir": "pnpm codegen:quantity:ir && pnpm codegen:quantum:ir && pnpm codegen:ratio:ir",
    "codegen:specific-quantity:ir": "tsx src/tools/generate-specific-quantity-ir.ts",
    "codegen:real-measure:ir": "tsx src/tools/generate-real-measure-ir.ts",
    "codegen:becoming-essence:ir": "tsx src/tools/generate-becoming-essence-ir.ts",
    "codegen:reflection-essence:ir": "tsx src/tools/generate-reflection-essence-ir.ts",
    "codegen:reflection-foundation:ir": "tsx src/tools/generate-reflection-foundation-ir.ts",
    "codegen:reflection-ground:ir": "tsx src/tools/generate-reflection-ground-ir.ts",
    "codegen:appearance-thing:ir": "tsx src/tools/generate-appearance-thing-ir.ts",
    "codegen:appearance-world:ir": "tsx src/tools/generate-appearance-world-ir.ts",
    "codegen:appearance-relation:ir": "tsx src/tools/generate-appearance-relation-ir.ts",
    "codegen:actuality-absolute:ir": "tsx src/tools/generate-actuality-absolute-ir.ts",
    "codegen:actuality-actuality:ir": "tsx src/tools/generate-actuality-actuality-ir.ts",
    "codegen:actuality-substance:ir": "tsx src/tools/generate-actuality-substance-ir.ts",
    "codegen:sphere-essence:ir": "pnpm codegen:reflection-essence:ir && pnpm codegen:reflection-foundation:ir && pnpm codegen:reflection-ground:ir && pnpm codegen:appearance-thing:ir && pnpm codegen:appearance-world:ir && pnpm codegen:appearance-relation:ir && pnpm codegen:actuality-absolute:ir && pnpm codegen:actuality-actuality:ir && pnpm codegen:actuality-substance:ir",
    "codegen:measure:ir": "pnpm codegen:specific-quantity:ir && pnpm codegen:real-measure:ir && pnpm codegen:becoming-essence:ir",
    "codegen:sphere-being:ir": "pnpm codegen:quality:ir && pnpm codegen:magnitude:ir && pnpm codegen:measure:ir",
    "codegen:quality:ir": "tsx src/tools/generate-quality-ir.ts",
    "preview:factstore": "tsx src/tools/preview-fact-store-prototype.ts",
    "preview:factstore:explain": "tsx src/tools/preview-fact-store-explained.ts",
    "seed": "tsx src/tools/run-seed.ts",
    "seed:enhanced": "tsx src/tools/run-seed-enhanced.ts",
    "seed:reflective": "tsx src/tools/run-seed-context-property.ts",
    "example:sdsl:neo4j": "tsx examples/src/sdsl/sdsl-specification-neo4j.ts",
    "db:reset": "tsx src/tools/db-reset.ts",
    "db:stats": "tsx src/tools/db-stats.ts",
    "db:explore": "tsx src/tools/db-query.ts",
    "neo4j:load:reflection": "bash src/relative/essence/reflection/generated/browser-loader/run-all-loader.sh",
    "neo4j:check:reflection": "bash src/relative/essence/reflection/generated/browser-loader/run-post-checks.sh"
  },
  "dependencies": {
    "neo4j-driver": "^5.25.0",
    "swipl": "^1.0.6",
    "tau-prolog": "^0.3.4",
    "uuid": "^11.1.0",
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.0",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "typescript": "^5.9.2",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=20.19.0",
    "pnpm": ">=9"
  }
}
