{
  "name": "@organon/logic",
  "version": "0.1.0",
  "description": "Organon Logic Processor",
  "scripts": {
    "build": "tsc",
    "b": "tsc",
    "clean": "rm -rf dist node_modules",
    "dev": "tsc --watch",
    "d": "tsc --watch",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "lint": "eslint . --cache",
    "format": "prettier --write \"**/*.{ts,js,md,json,yml,yaml}\" --ignore-path .gitignore",
    "docs:api": "typedoc --tsconfig ./tsconfig.json --entryPoints \"./src/schema/*.ts\" \"./src/form/**/*.ts\" --exclude \"**/*.test.ts\" --readme ./README.md --out ./docs/api"
  },
  "dependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.8",
    "vitest": "^3.1.3",
    "typedoc": "^0.26.0"
  },
  "engines": {
    "node": ">=18.18",
    "pnpm": ">=9"
  }
}
