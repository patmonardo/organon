{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": [
      "ES2022"
    ],
    "rootDir": ".",
    "outDir": "dist",
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "baseUrl": ".",
    "paths": {
      "@schema": [
        "../src/schema/index.ts"
      ],
      "@schema/*": [
        "../src/schema/*"
      ],
      "@repository": [
        "../src/repository/index.ts"
      ],
      "@repository/*": [
        "../src/repository/*"
      ],
      "@absolute": [
        "../src/absolute/index.ts"
      ],
      "@absolute/*": [
        "../src/absolute/*"
      ],
      "@relative": [
        "../src/relative/index.ts"
      ],
      "@relative/*": [
        "../src/relative/*"
      ],
      "@organon/logic": [
        "../logic/dist/index"
      ],
      "@organon/logic/*": [
        "../logic/dist/*"
      ],
      "@organon/model": [
        "../../model/dist/index"
      ],
      "@organon/model/*": [
        "../../model/dist/*"
      ],
      "@organon/task": [
        "../../task/dist/index"
      ],
      "@organon/task/*": [
        "../../task/dist/*"
      ]
    }
  },
  "include": [
    "./**/*.test.ts"
  ]
}
