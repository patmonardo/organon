{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@organon/gdsl": [
        "../gdsl/dist/index"
      ],
      "@organon/gdsl/*": [
        "../gdsl/dist/*"
      ],
      "@organon/logic": [
        "../logic/dist/index"
      ],
      "@organon/logic/*": [
        "../logic/dist/*"
      ],
      "@organon/reality": [
        "../reality/dist/index"
      ],
      "@organon/reality/*": [
        "../reality/dist/*"
      ]
    }
  },
  "include": [
    "tsconfig.json",
    "src/index.ts",
    "src/model.ts"
  ]
}
