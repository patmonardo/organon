{
  "name": "organon",
  "version": "0.1.0",
  "license": "GPL-3.0-only",
  "private": false,
  "description": "Organon Research Assistant Platform",
  "workspaces": [
    "logic",
    "model",
    "task"
  ],
  "scripts": {
    "all": "pnpm clean && pnpm install && pnpm build && pnpm test",
    "a": "pnpm clean && pnpm install && pnpm build && pnpm test",
    "build": "pnpm run --recursive build",
    "b": "pnpm run --recursive build",
    "clean": "rm -rf node_modules && pnpm run --recursive clean",
    "cc": "rm -rf node_modules && pnpm run --recursive clean",
    "dev": "pnpm run --parallel --recursive dev",
    "d": "pnpm run --parallel --recursive dev",
    "test": "pnpm run --recursive test",
    "t": "pnpm run --recursive test",
    "lint": "eslint . --cache",
    "format": "prettier --write \"**/*.{ts,js,md,json,yml,yaml}\" --ignore-path .gitignore",
    "doc:api": "pnpm run --recursive doc:api",
    "logic:build": "pnpm --filter=@organon/logic build",
    "logic:test": "pnpm --filter=@organon/logic test",
    "logic:dev": "pnpm --filter=@organon/logic dev",
    "logic:start": "pnpm --filter=@organon/logic start",
    "model:build": "pnpm --filter=@organon/model build",
    "model:test": "pnpm --filter=@organon/model test",
    "model:dev": "pnpm --filter=@organon/model dev",
    "model:start": "pnpm --filter=@organon/model start",
    "task:build": "pnpm --filter=@organon/task build",
    "task:test": "pnpm --filter=@organon/task test",
    "task:dev": "pnpm --filter=@organon/task dev",
    "task:start": "pnpm --filter=@organon/task start"
  },
  "devDependencies": {
    "fast-glob": "^3.3.2",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "tsx": "^4.15.7",
    "vitest": "^4.0.15"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@swc/core",
      "@prisma/engines",
      "bcrypt",
      "prisma",
      "sharp"
    ],
    "overrides": {
      "next": "16.1.0",
      "react": "19.2.3",
      "react-dom": "19.2.3"
    },
    "ignoredBuiltDependencies": [
      "@firebase/util",
      "@scarf/scarf",
      "duckdb",
      "esbuild",
      "protobufjs",
      "swipl"
    ]
  }
}
