{
  "name": "@organon/task",
  "private": true,
  "version": "0.1.0",
  "description": "Organon Task Processor",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts ",
  "scripts": {
    "build": "tsc",
    "b": "tsc",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo",
    "dev": "tsc --watch",
    "d": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --reporter=dot",
    "t": "vitest run",
    "lint": "eslint . --cache",
    "format": "prettier --write \"**/*.{ts,js,md,json,yml,yaml}\" --ignore-path .gitignore"
  },
  "workspaces": [
    "@organon/reality",
    "@organon/core",
    "@organon/logic",
    "@organon/model",
    "@organon/task"
  ],
  "dependencies": {
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^20.19.8",
    "tsx": "^4.20.4",
    "typescript": "^5.5.0",
    "typedoc": "^0.26.0",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=20.20.0",
    "pnpm": ">=10"
  }
}
