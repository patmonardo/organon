{
  "name": "@organon/task",
  "private": true,
  "version": "0.1.0",
  "description": "Organon Task Processor",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts ",
  "scripts": {
    "build": "tsc && tsc-alias",
    "b": "tsc && tsc-alias",
    "clean": "rm -rf dist node_modules tsconfig.tsbuildinfo",
    "dev": "tsc --watch",
    "d": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:ci": "vitest run --reporter=dot",
    "t": "vitest run",
    "lint": "eslint . --cache",
    "format": "prettier --write \"**/*.{ts,js,md,json,yml,yaml}\" --ignore-path .gitignore"
  },
  "dependencies": {
    "@organon/core": "workspace:*",
    "@organon/logic": "workspace:*",
    "@organon/model": "workspace:*",
    "@organon/reality": "workspace:*",
    "@nestjs/common": "^9.0.0",
    "@nestjs/core": "^9.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schedule": "^6.0.0",
    "@nestjs/testing": "^9.0.0",
    "@types/node": "^20.19.8",
    "typescript": "^5.9.2",
    "tsc-alias": "^1.8.16",
    "tsx": "^4.20.4",
    "vitest": "^3.1.3"
  },
  "engines": {
    "node": ">=20.20.0",
    "pnpm": ">=10"
  }
}
