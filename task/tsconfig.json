{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
      "@organon/gdsl": [
        "../gdsl/dist/index"
      ],
      "@organon/gdsl/*": [
        "../gdsl/dist/*"
      ],
      "@organon/logic": [
        "../logic/dist/index"
      ],
      "@organon/logic/*": [
        "../logic/dist/*"
      ],
      "@organon/model": [
        "../model/dist/index"
      ],
      "@organon/model/*": [
        "../model/dist/*"
      ]
    }
  },
  "include": [
    "src/index.ts",
    "src/task.ts"
  ],
  "exclude": [
    "src/archive/**/*.ts",
    "src/eval/**/*.ts"
  ]
}
