{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "incremental": true,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@organon/reality": ["reality/src/index.ts"],
      "@organon/reality/*": ["reality/src/*"],
      "@organon/core": ["core/src/index.ts"],
      "@organon/core/*": ["core/src/*"],
      "@organon/task": ["task/src/index.ts"],
      "@organon/task/*": ["task/src/*"],
      "@organon/logic": ["logic/src/index.ts"],
      "@organon/logic/*": ["logic/src/*"],
      "@organon/model": ["model/src/index.ts"],
      "@organon/model/*": ["model/src/*"]
    }
  },
  "references": [
    { "path": "reality" },
    { "path": "core" },
    { "path": "task" },
    { "path": "logic" },
    { "path": "model" }
  ],
  "exclude": [
    "node_modules",
    "**/dist",
    "**/build",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}